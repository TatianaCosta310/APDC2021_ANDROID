<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_viewCard2"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingLeft="10dp"
    app:cardMaxElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageEventCard2"
            android:layout_width="84dp"
            android:layout_height="78dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/no_image"
            android:drawingCacheQuality="high"
            android:src="@drawable/person"
            app:civ_border_color="@color/teal_700"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textNameCard2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/prompt_userName"
            android:textColor="@color/teal_700"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textNameCard4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textNameCard3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:text="Comment"
            android:textColor="@color/black"
            android:textSize="18sp" />



        <Button
            android:visibility="invisible"
            android:id="@+id/ButtonRemoveComment"
            style="@style/text_box_style"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:text="Remove"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.cardview.widget.CardView>