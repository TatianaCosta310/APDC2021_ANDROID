<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/container7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ui.login.UpdateUser"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UpdText"
            style="@style/text_box_style"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/update_user"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText

            android:id="@+id/QUOTE"
            style="text_box_style2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/textboxshape"
            android:hint="@string/prompt_quote"
            android:inputType="text"
            android:padding="@dimen/activity_horizontal_margin"
            android:selectAllOnFocus="true" />

        <EditText

            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/textboxshape"
            android:hint="@string/prompt_about"
            android:inputType="text"
            android:padding="@dimen/activity_horizontal_margin"
            android:selectAllOnFocus="true"
            app:layout_constraintBottom_toBottomOf="@id/QUOTE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/Social"
            style="@style/text_box_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="@string/Social_Networks"
            android:textAlignment="center"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText

            android:autoLink="all"
            android:id="@+id/Social_networks_Instagram"
            android:layout_width="338dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/textboxshape"
            android:drawableLeft="@mipmap/intagram_foreground"
            android:hint="Instagram"
            android:inputType="text"
            android:padding="@dimen/activity_horizontal_margin"
            android:selectAllOnFocus="true"
            app:layout_constraintBottom_toBottomOf="@id/Social"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText

            android:autoLink="all"
            android:id="@+id/Social_networks_Facebook"
            android:layout_width="338dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/textboxshape"
            android:drawableLeft="@mipmap/facebook_foreground"
            android:hint="Facebook"
            android:inputType="text"
            android:padding="@dimen/activity_horizontal_margin"
            android:selectAllOnFocus="true"
            app:layout_constraintBottom_toBottomOf="@id/Social_networks_Instagram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:autoLink="all"
            android:id="@+id/Social_networks_Twitter"
            android:layout_width="338dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="570dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/textboxshape"
            android:drawableLeft="@mipmap/twitter_foreground"
            android:hint="Twitter"

            android:inputType="text"
            android:padding="@dimen/activity_horizontal_margin"
            android:selectAllOnFocus="true"
            app:layout_constraintBottom_toBottomOf="@id/Social_networks_Facebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="670dp"
            android:backgroundTint="@color/turquoise_500"
            android:enabled="true"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Social_networks_Twitter" />


    </RelativeLayout>
</ScrollView>