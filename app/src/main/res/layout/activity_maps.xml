<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent">


    <AutoCompleteTextView
        android:id="@+id/eventPlace2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:hint="Place where it will take place"
        android:drawableLeft="@drawable/search_image"
        android:inputType ="text"
        android:background="@drawable/white_border"
        android:selectAllOnFocus="true"
        android:imeOptions="actionSearch" />

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="60dp"
    tools:context=".GoogleMaps.MapsActivity" />

    <Button
        android:id="@+id/ButtonFinishMap"
        style="@style/text_box_style"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="680dp"
        android:textSize ="20sp"
        android:text="@string/nextButton" />

</RelativeLayout>