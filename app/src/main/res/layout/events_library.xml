<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.EventsUserLibrary">

    <TextView
        android:id="@+id/textViewUserEventsLibrary"
        style="@style/text_box_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="User Events Profile "
        android:textAlignment="center"
        android:textSize="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewParticipatingNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="Participating "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewUserEventsLibrary" />

    <TextView
        android:id="@+id/textViewParticipatingNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="52dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="Participating num "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewUserEventsLibrary" />


    <Button
        android:id="@+id/ButtonSeeParticipatingEvents"
        style="@style/text_box_style"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="cursive"
        android:text="Participating"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewParticipatingNum" />


    <TextView
        android:id="@+id/textViewCreated"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="Created "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewParticipatingNumber" />

    <TextView
        android:id="@+id/textViewCreatedNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="Created num "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewParticipatingNumber" />


    <Button
        android:id="@+id/ButtonSeeCreatedEvents"
        style="@style/text_box_style"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="cursive"
        android:text="Created Events"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCreated"/>

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="Points "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCreated" />

    <TextView
        android:id="@+id/textViewPointsNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:text="Points "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCreated" />

</androidx.constraintlayout.widget.ConstraintLayout>