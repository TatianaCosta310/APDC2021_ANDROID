<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:id="@+id/imageEvent"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerVertical="true"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="30dp"
    app:srcCompat="@mipmap/ic_launcher_round" />

<TextView
    android:id="@+id/textOwner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="300dp"
    android:text="owner"
    android:textSize="16sp"
    android:layout_toEndOf="@+id/imageEvent"
    />
<TextView
    android:id="@+id/textName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="330dp"
    android:text="name"
    android:textSize="16sp"
    android:layout_toEndOf="@+id/imageEvent" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Description"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="370dp"
        android:layout_toEndOf="@+id/imageEvent"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="390dp"
        android:layout_toEndOf="@+id/imageEvent"/>

    <TextView
        android:id="@+id/Where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="410dp"
        android:layout_toEndOf="@+id/imageEvent"/>


    <TextView
        android:id="@+id/When"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="430dp"
        android:layout_toEndOf="@+id/imageEvent"/>


    <TextView
        android:id="@+id/Until"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Until"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="460dp"
        android:layout_toEndOf="@+id/imageEvent"/>

    <TextView
        android:id="@+id/maxVolunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="maxVolunt"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="480dp"
        android:layout_toEndOf="@+id/imageEvent"/>

    <TextView
        android:id="@+id/interested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="interested"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginTop="500dp"
        android:layout_toEndOf="@+id/imageEvent"/>

  <Button
       android:id="@+id/ButtonShowOnMap"
       style="@style/text_box_style"
       android:layout_width="110dp"
       android:layout_height="38dp"
       android:layout_marginStart="20dp"
       android:layout_marginTop="420dp"
       android:fontFamily="cursive"
       android:text="Show On Map"
       android:textSize="15dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/imageEvent" />



</RelativeLayout>